<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2.5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TextView
            android:id="@+id/sdi_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/sdi_description"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_code"/>

        <TextView
            android:id="@+id/sdi_detail"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_description"/>

        <TextView
            android:id="@+id/sdi_brand"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_detail"/>

        <TextView
            android:id="@+id/sdi_size_color"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_brand"/>

        <TextView
            android:id="@+id/sdi_amount"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            android:text="Cant: 2 u"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/sdi_unit_price"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_size_color"/>

        <TextView
            android:id="@+id/sdi_unit_price"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            android:text="Prec: $750"
            android:textAlignment="center"
            card_view:layout_constraintStart_toEndOf="@+id/sdi_amount"
            card_view:layout_constraintEnd_toStartOf="@+id/sdi_sub_total"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_size_color"/>

        <TextView
            android:id="@+id/sdi_sub_total"
            android:layout_width="0dp"
            android:textSize="@dimen/title_text"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="$ 1500"
            card_view:layout_constraintStart_toEndOf="@+id/sdi_unit_price"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/sdi_size_color"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
